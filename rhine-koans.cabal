build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

tested-with:
  GHC == 9.2.8
  GHC == 9.4.8

common opts
    ghc-options: -Wall
    default-language: GHC2021
    build-depends:    base >=4.16.4.0 && <4.18
                    , rhine ^>= 1.2
                    , text ^>= 2.0
    default-extensions:
        DataKinds
        OverloadedStrings
    if flag(dev)
        ghc-options: -Werror

common exec
    import:           opts
    other-modules:    Koan

common test
    import:           exec
    build-depends:
      , rhine-koans:test-io

flag dev
  description: Enable warnings as errors. Active on ci.
  default: False
  manual: True

library test-io
    import:           opts
    hs-source-dirs:   generic/test-io
    exposed-modules:  TestIO
    build-depends:
        silently ^>= 1.2
      , temporary ^>= 1.3

executable basic-1-hello-rhine
    import:           exec
    main-is:          Main.hs
    hs-source-dirs:   koans/basic/1-hello-rhine
                    , generic/reimport-main

test-suite basic-1-hello-rhine-test
    import:           test
    type:             exitcode-stdio-1.0
    main-is:          Test.hs
    hs-source-dirs:   koans/basic/1-hello-rhine

